{
  "$schema": "../../src/schema/configuration.schema.json",
  "extends": "../../.dependency-cruiser.json",
  "options": {
    "prefix": "https://github.com/sverweij/dependency-cruiser/blob/develop/tools/schema/",
    "extraExtensionsToScan": [],
    "reporterOptions": {
      "dot": {
        "collapsePattern": ["node_modules/[^/]+"],
        "theme": {
          "graph": {
            "splines": "ortho",
            "nodesep": "0.2",
            "ranksep": "0.2"
          },
          "modules": [
            {
              "criteria": { "source": "\\.schema\\.mjs$" },
              "attributes": {
                "color": "darkgreen",
                "fillcolor": "darkgreen",
                "fontcolor": "#ffffcc"
              }
            },
            {
              "criteria": { "source": "\\-type\\.mjs$" },
              "attributes": {
                "fillcolor": "white",
                "fontcolor": "black",
                "color": "black",
                "shape": "underline"
              }
            }
          ]
        }
      }
    }
  }
}
