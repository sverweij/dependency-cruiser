{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2015",
    "module": "commonjs",
    "outDir": "./dist",

    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "baseUrl": "./src",
    "paths": {
      "*": ["./typos/*"],
      "gewoon/*": ["./common/*"],
      "shared": ["./shared"]
    },
    "esModuleInterop": true
  }
}
