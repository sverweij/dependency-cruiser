{
  "root": true,
  "extends": ["moving-meadow"],
  "rules": {
    "security/detect-non-literal-fs-filename": "off",
    "unicorn/no-null": "off"
  },
  "overrides": [
    {
      "files": ["test/**/*.js"],
      "env": {
        "mocha": true
      },
      "rules": {
        "max-lines": "off",
        "max-lines-per-function": "off"
      }
    },
    {
      "files": ["tools/**/*.mjs"],
      "parserOptions": {
        "ecmaVersion": 2020
      },
      "rules": {
        "node/no-unsupported-features/es-syntax": "off"
      }
    }
  ]
}
